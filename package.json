{
  "name": "hotel-kiosk",
  "version": "0.0.1",
  "author": "Plitsoft",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@stackflow/core": "^1.1.0",
    "@stackflow/plugin-basic-ui": "^1.9.1",
    "@stackflow/plugin-renderer-basic": "^1.1.12",
    "@stackflow/react": "^1.3.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "emotion": "^11.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "electron-updater": "^6.2.1",
    "i18next": "^23.14.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.0.1",
    "react-scripts": "5.0.1",
    "sass": "^1.77.8",
    "ts-node": "^10.9.2",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "main": "dist/app/Main.js",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "git+http://gitlab.plitsoft.com/plitsoft/hotel-kiosk/hotel-kiosk-electron.git"
  },
  "build": {
    "appId": "com.hotel-kiosk.app",
    "productName": "Hotel Kiosk",
    "files": [
      "build/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "./output"
    },
    "extraMetadata": {
      "main": "dist/app/Main.js"
    }
  },
  "scripts": {
    "start": "concurrently \"yarn react-start\" \"wait-on http://localhost:3000 && yarn electron-start\"",
    "build": "tsc && yarn react-build && electron-builder --publish always",
    "react-start": "BROWSER=none react-scripts start",
    "react-build": "react-scripts build",
    "electron-start": "tsc && electron .",
    "deploy": "electron-builder --publish always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3",
    "electron-log": "^5.1.7",
    "eslint": "^9.9.0",
    "eslint-plugin-react": "^7.35.0",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.2.0",
    "wait-on": "^8.0.0"
  }
}
